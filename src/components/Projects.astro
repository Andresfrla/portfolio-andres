import MySQL from './icons/MySQL.astro'
import Prisma from './icons/Prisma.astro'
import Javascript from './icons/Javascript.astro'
import Storybook from './icons/StoryBook.astro'


const TAGS = {
    REACT: {
        name: "React.Js",
        class: "bg-blue-900 text-red",
