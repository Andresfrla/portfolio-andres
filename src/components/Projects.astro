    TYPESCRIPT: {
        name: "TypeScript",
        class: "bg-zinc-100 text-blue-800",
        icon: Typescript,
    },
    STORYBOOK: {
        name: "StoryBook",
        class: "bg-pink-200 text-black",
        icon: Storybook,
    },
    JAVASCRIPT: {
        name: "Javascript",
        class: "bg-amber-950 text-yellow-200",
        icon: Javascript,
    },
    NEXTJS: {
        name: "Next Js",
        class: "bg-zinc-100 text-black",
        icon: Nextjs,
    },
    HTML: {
        name: "HTML",
        class: "bg-amber-800 text-white",
        icon: Html,
    },
    CSS: {
        name: "CSS",
        class: "bg-sky-950 text-white",
        icon: Css,
    },
    TAILWIND: {
        name: "Tailwind",
        class: "bg-black-600 text-white",
        icon: Tailwind,
    },
    MONGODB: {
        name: "MongoDB",
        class: "bg-green-700 text-white",
        icon: MongoDB,
    },
    NODEJS: {
        name: "Node.js",
        class: "bg-white text-emerald-600",
        icon: Node,
    },
    HANDLEBARS: {
        name: "Handlebars",
        class: "bg-white text-black",
        icon: Handlebars,
    },
    VITE: {
        name: "Vite",
        class: "bg-black text-white",
        icon: Vite
    },
    MySQL: {
