---
import Layout from '../layouts/Layout.astro';
import Badge from "../components/Badge.astro"
import LinkedinIcon from "../components/icons/Linkedin.astro"
import GithubIcon from '../components/icons/Github.astro';
import GmailIcon from '../components/icons/Gmail.astro'
import Certificate from '../components/icons/Certificate.astro'
import SocialPill from "../components/SocialPill.astro"
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Code from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro';
import Phone from '../components/icons/Phone.astro';
import Download from '../components/icons/Download.astro';
---

<Layout
title="Portfolio -Andres Franco L- Programmer and Web Developer"
description="Hire a good programmer for your web or your mobile App">
	<main class="px-4">
		<SectionContainer class="py-44 pb-24">
			<div class="flex justify-center">
			<img class="rounded-full size-60 mb-7"
   			src="https://i.ibb.co/xgbs4mz/andres.jpg"
    		alt="Andres photo">
			</div>
			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex justify-start flex-row gap-x-4 pb-6 lg:pb-10">
			Hi I'm Andres <div class="flex justify-center items-center">
			<a
			href="https://www.linkedin.com/in/andresfrancolangthon/"
			target="_blank"
			rel="noopener"
			class="flex justify-center items-center"
			>
				<Badge> Available for hire</Badge></a></div></h1>
			<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px] justifify-content">+7 years of Professional experience. <span class="text-red-300/90">Web Developer and business Administrator.</span>
			<span class="text-yellow-200">From Bogota Colombia living in Mexico City.</span> I recently complete the Professional Certification of Meta.
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
					<SocialPill href="https://www.linkedin.com/in/andresfrancolangthon/">
						<LinkedinIcon class="size-4 lg:size-6"/>LinkedIn </svg>
					</SocialPill>
					<SocialPill href="https://github.com/Andresfrla">
						<GithubIcon class="size-4 lg:size-6"/>Github </svg>
					</SocialPill>
					<SocialPill href="mailto:andresfranla@gmail.com">
						<GmailIcon class="size-4 lg:size-6"/>andresfranla@gmail.com </svg>
					</SocialPill>
					<SocialPill href="https://drive.google.com/file/d/1SjZksltRKK7pujRZM70GclVWws53qpTn/view?usp=drive_link">
						<Download class="size-4 lg:size-6"/>Download My Cv </svg>
					</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experience">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 item-center">
				<Certificate class="size-8"/>
				Certificates
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="projects">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 item-center">
				<Code class="size-7"/>
				Projects
			</h2>
			<Projects/>
		</SectionContainer>

		<SectionContainer id="contact">
			<h2 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex justify-start flex-row gap-x-4 pb-6 lg:pb-10">
				Let's get in touch
			</h2>
			<div class="flex gap-4 mt-8 flex-col">
				<a class="flex flex-row mb-2" href="mailto:andresfranla@gmail.com">
					<GmailIcon class="size-4 lg:size-6 mr-2"/> andresfranla@gmail.com </svg>
				</a>
				<div class="flex flex-row mb-2">
					<Phone class="size-4 lg:size-6 mr-2"/> +52 55 391 383 02 </svg>
				</div>
				<a class="flex flex-row mb-2" href="https://github.com/Andresfrla">
					<GithubIcon class="size-4 lg:size-6 mr-2"/> Github </svg>
				</a>
				<a class="flex flex-row mb-2" href="https://www.linkedin.com/in/andresfrancolangthon/">
					<LinkedinIcon class="size-4 lg:size-6 mr-2"/> Linkedin </svg>
				</a>
			</div>
		</SectionContainer>
	</main>
</Layout>

